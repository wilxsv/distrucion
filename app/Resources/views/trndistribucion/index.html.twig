{% extends 'base.html.twig' %}
{% block header_css %}{% endblock%}
{% block viewtitle %} Asignaciones {% endblock %}  
{% block navigationlink %}

    <a class="btn btn-danger pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light" 
       href="{{ path('trndistribucion_new') }}">Nueva asignación</a>

{% endblock %}
{% block body %}
    <h3>Listado de asignaciones</h3>


    <div id="jsGrid"></div>



{% endblock %}
{% block footer_js %}
    <!-- Editable -->
    <script src="{{ asset('assets/') }}distro/js/db.js"></script>
    <script type="text/javascript" src="{{ asset('assets/') }}distro/js/jsgrid.min.js"></script>
    <script src="{{ asset('assets/') }}distro/js/jsgrid-init.js"></script>
    <script type="text/javascript">
        var asignaciones = [
        {% for trnDistribucion in trnDistribucions %}
            
                    {"Id": itemTemplate: function(value, item){
                                                                return $("<a>").attr("href", "{{ path('trndistribucion_show', { 'id': trnDistribucion.id }) }}").text("{{ trnDistribucion.id }}");
                                                            },
                    "Descripción":"{{ trnDistribucion.descripcion }}",
                    "-": itemTemplate: function(value, item){
                                                                var $lnkver = $("<a>").attr("href", "{{ path('trndistribucion_show', { 'id': trnDistribucion.id }) }}").text("ver");
                                                                var $lnkedit = $("<a>").attr("href", "{{ path('trndistribucion_edit', { 'id': trnDistribucion.id }) }}").text("editar");
                                                                return $("<div>").append($lnkver).append($lnkedit);
                                                            }
                    }
           
        {% endfor %}
     ];

        $(function() {
 
    $("#jsGrid").jsGrid({
        height: "90%",
        width: "100%",
 
        sorting: true,
        paging: true,
        
        data: asignaciones,
    </script>
{% endblock %}