{% extends 'base.html.twig' %}

{% block body %}
  <h1>Detalle de Productos {{ establecimiento }}</h1>

  {% for flash_message in app.session.flashBag.get('error') %}
    <div class="flash-notice">
      {{ flash_message }}
    </div>
  {% endfor %}

  <table>
  <form action={{ path ('establecimientos_vale') }}
      <thead>
          <tr>
              <th>Codigo</th>
              <th>Descripcion</th>
              <th>UM</th>
              <th>Existencias</th>
              <th>Cantidad Asignada</th>
              <th>Selecciona</>
              <th>Cantidad a Despachar</th>
              <th>Detalles</th>
          </tr>
      </thead>
      <tbody>
      {% for producto in productos %}
          <tr>
              <td>{{ producto.codigo_sinab }}</td>
              <td>{{ producto.nombre_largo_insumo }}</td>
              <td>{{ producto.unidad_medida }}</td>
              <td>{{ producto.sum }}</td>
              <td>{{ producto.cantidadasignada }}</td>

              <td><input type="checkbox" name="products[]" value={{ producto.id }}></td>
              <!--{% if (id == producto.id) %}
              <td>{{ total }}</td>
              {% else %}
              <td>0.00</td>
              {% endif %}-->
              <td><input type="number" name="cantidades[]" min="0" max={{ producto.cantidadasignada }}></td>
              <td><a href={{ path ('establecimientos_asignaciones', { 'id': producto.id }) }}>Ver Detalles</a></td>

          </tr>
      {% endfor%}
      <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td><input type="submit" value="Finalizar Despacho"></td>
      </tr>
      </tbody>
      </form>
  </table>
{% endblock %}
